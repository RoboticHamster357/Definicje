<Window x:Class="Definicje.Etap1_Sprawdzenie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Definicje"
        mc:Ignorable="d"
        Title="Etap1_Sprawdzenie" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Button x:Name="BDalej" Content="Dalej" Grid.Column="3" Grid.Row="2" Height="40" Width="110" Click="BDalej_Click"/>
        <TextBox x:Name="TBgratulacje" Text="Gratuluję/Przykro mi" IsReadOnly="True" Margin="10" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0" />
        <TextBox x:Name="tbPoprawiona" IsReadOnly="True" Margin="10" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1"/>
        <Button x:Name="BJeszcze_Raz" Content="Spróbuj jeszcze raz" Click="BJeszcze_Raz_Click" Grid.Column="2" Grid.Row="2" Height="40" Width="110" />

    </Grid>
</Window>
